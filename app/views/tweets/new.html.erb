<%= stylesheet_link_tag 'new', :media => "all" %>
<%= form_for @tweet do |t| %>
<div class ="new">
    <%= t.text_field :content, :size => 98 %>
    <br>
        <%= t.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
        <div>
            <%= tag.label do %>
            <%= tag.check_box %>
            <%= tag.text %>
            <% end %>
        </div>
    <% end %>
    <br>
    <%= t.label :video %>
    <%= t.file_field :video %>
    <%= t.label :image %>
    <%= t.file_field :image %>
    <%= t.submit "Hugする" %>
<% end %>
</div>